{
  "name": "fcdns",
  "version": "0.6.0",
  "description": "DNS relay server with fact-checking.",
  "keywords": [
    "dns"
  ],
  "type": "module",
  "bin": "lib/cli.js",
  "files": [
    "migrations",
    "lib"
  ],
  "engines": {
    "node": ">=18.17.0"
  },
  "repository": "git@github.com:BlackGlory/fcdns.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "scripts": {
    "prepare": "ts-patch install -s",
    "deduplicate": "yarn-deduplicate",
    "postinstall": "patch-package",
    "prepublishOnly": "run-s postinstall prepare clean build",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --quiet src __tests__",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand --config jest.config.cjs",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand --coverage --config jest.config.cjs",
    "test:debug": "cross-env NODE_OPTIONS='--experimental-vm-modules --inspect-brk' jest --runInBand --config jest.config.cjs",
    "clean": "rimraf lib",
    "build": "run-p build:*",
    "build:src": "tsc --project tsconfig.build.json",
    "build:scripts": "tsc --project tsconfig.scripts.json",
    "smoke": "node lib/cli.js --help",
    "release": "standard-version",
    "script:generate-ip-whitelist-by-cc": "ts-node --esm scripts/generate-ip-whitelist-by-cc.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s postinstall prepare clean lint build test smoke",
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@blackglory/jest-resolver": "^0.3.1",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/better-sqlite3": "^7.6.8",
    "@types/jest": "^29.5.11",
    "@types/node": "14",
    "@types/ping": "^0.4.4",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "extra-prompts": "^0.1.6",
    "husky": "4",
    "internet-number": "^4.0.1",
    "jest": "^29.7.0",
    "jest-resolve": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.1.1",
    "typescript": "5.3.3",
    "typescript-transform-paths": "^3.4.6",
    "yarn-deduplicate": "^6.0.2"
  },
  "dependencies": {
    "@blackglory/better-sqlite3-migrations": "^0.1.18",
    "@blackglory/errors": "^3.0.3",
    "@blackglory/prelude": "^0.3.4",
    "@blackglory/structures": "^0.13.4",
    "address-range": "^0.2.14",
    "better-sqlite3": "^9.2.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "extra-filesystem": "^0.5.1",
    "extra-lazy": "^2.0.2",
    "extra-logger": "^0.7.2",
    "extra-promise": "^6.0.8",
    "extra-utils": "^5.6.0",
    "iterable-operator": "^4.0.6",
    "migration-files": "^0.4.1",
    "native-node-dns": "0.7.6",
    "native-node-dns-packet": "0.1.5",
    "patch-package": "^8.0.0",
    "ping": "^0.4.4",
    "return-style": "^3.0.1",
    "you-died": "^0.4.5"
  }
}
