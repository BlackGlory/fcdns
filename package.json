{
  "name": "fcdns",
  "version": "0.8.0",
  "description": "DNS relay server with fact-checking.",
  "keywords": [
    "dns"
  ],
  "type": "module",
  "bin": "lib/cli.js",
  "files": [
    "migrations",
    "lib"
  ],
  "engines": {
    "node": ">=22"
  },
  "repository": "git@github.com:BlackGlory/fcdns.git",
  "author": "BlackGlory <woshenmedoubuzhidao@blackglory.me>",
  "license": "MIT",
  "scripts": {
    "prepare": "ts-patch install -s",
    "deduplicate": "yarn-deduplicate",
    "prepublishOnly": "run-s prepare clean build",
    "lint": "eslint --quiet src __tests__",
    "test": "vitest run",
    "clean": "rimraf lib",
    "build": "run-p build:*",
    "build:src": "tsc --project tsconfig.build.json",
    "build:scripts": "tsc --project tsconfig.scripts.json",
    "smoke": "node lib/cli.js --help",
    "release": "standard-version",
    "script:generate-ip-whitelist-by-cc": "tsx scripts/generate-ip-whitelist-by-cc.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s prepare clean lint build test smoke",
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@eslint/js": "^10.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "22",
    "cross-env": "^10.1.0",
    "eslint": "^10.0.2",
    "extra-prompts": "^0.3.0",
    "husky": "4",
    "internet-number": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.1.3",
    "standard-version": "^9.5.0",
    "ts-patch": "^3.3.0",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.56.1",
    "typescript-transform-paths": "^3.5.6",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.1.1",
    "vitest": "^4.0.18",
    "yarn-deduplicate": "^6.0.2"
  },
  "dependencies": {
    "@blackglory/better-sqlite3-migrations": "^0.2.2",
    "@blackglory/errors": "^3.1.0",
    "@blackglory/prelude": "^0.4.0",
    "@blackglory/structures": "^0.14.13",
    "address-range": "^0.2.14",
    "better-sqlite3": "^12.6.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "extra-abort": "^0.4.1",
    "extra-dns": "^0.1.8",
    "extra-filesystem": "^0.6.2",
    "extra-lazy": "^2.0.2",
    "extra-logger": "^0.8.0",
    "extra-promise": "^7.1.1",
    "extra-utils": "^6.0.0",
    "iterable-operator": "^6.0.0",
    "migration-files": "^0.4.3",
    "ping": "^1.0.0",
    "return-style": "^4.0.0",
    "you-died": "^0.4.6"
  }
}
